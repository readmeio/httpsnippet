{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "target": "ES2020",
    "strict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "./src/fixtures/", "**/*.test.ts"]
}
